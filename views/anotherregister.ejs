<style>
    .container{
    text-align: center;
    vertical-align: middle;
    height:100%;
    
    
    }

    .login-header {
        margin:10% 0% 5% 0%;


    }
    .login-container {
    background: #ebebeb;
    padding: 12px;
    border-radius: 30px;
    -webkit-box-shadow: 0 10px 6px -6px #777;
        -moz-box-shadow: 0 10px 6px -6px #777;
                box-shadow: 0 10px 6px -6px #777;
    }
    input {
        margin: 10px;
        width:90%;
        border-radius: 5px;
        padding:5px;
    }

    .arrow_btn {
        display: inline-block;
        position: relative;
        width: 90%;
        margin:5px;
        padding:5px;

        text-align: center;
        text-decoration: none;
        color: #1B1B1B;
        background: white;
        border-radius: 30px;
        border:1px solid #1B1B1B;
        transition: transform ease .3s;
    }
    .arrow_btn:hover {
        cursor: pointer;
        text-decoration: none;
    }
    .arrow_btn span {
        display: inline-block;
        text-decoration: none;	
        transition: transform ease .3s;
    }
    .arrow_btn:hover span{
        cursor: pointer;
        text-decoration: none;
        transform: translateX(6px);
    }
    .ref{
        margin:5px;
    }
    .cp_iptxt{
        position: relative;
    }
    .cp_iptxt:before{
        content: '\f70c';  
        font-weight:900;
        font-family:"Font Awesome 5 Free";
        position: relative;
        left:40px;
    }
    .cp_iptxt1{
        position: relative;
    }
    .cp_iptxt1:before{
        content: '\f1ad';  
        font-weight:900;
        font-family:"Font Awesome 5 Free";
